#include <cmath>
#include <cstdio>
#include <vector>
#include <iostream>
#include <algorithm>
using namespace std;


int main() {
    int m,n,p=0;
    cin>>n>>m;
    int arr[n][9];
    for(int j=0;j<n;j++)
    {
    cin>>p;
    int arr[j][p];
    arr[j][0]=p;
    for(int i=1;i<p;i++)
    cin>>arr[j][i];
    }
    int x=0,y=0;
    for(int i=0;i<m;i++)
    {
        cin>>x>>y;
        cout<<arr[x][y+1]<<endl;
    }
    
    
     
    return 0;
}